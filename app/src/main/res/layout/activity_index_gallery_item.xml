<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:background="#00323232">
    <RelativeLayout android:layout_width="150dp" android:layout_height="150dp" android:background="#00323232">
        <ImageView
                android:id="@+id/id_index_gallery_item_image"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/id_index_gallery_item_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/id_index_gallery_item_image"
                android:textColor="#ffffff"
                android:textSize="17sp"/>
    </RelativeLayout>
    <ImageView android:layout_width="80dp" android:layout_height="20dp"
               android:background="@drawable/shadow"
               android:layout_gravity="bottom|end"
               android:layout_marginBottom="28dp"
               android:layout_marginRight="1dp"
               android:id="@+id/shadowpic"

    />
    <TextView android:layout_width="80dp" android:layout_height="20dp"
              android:background="@drawable/shadow"
              android:layout_gravity="bottom|end"
              android:layout_marginBottom="28dp"
              android:layout_marginRight="1dp"
              android:id="@+id/shadow"
              android:textColor="#ffffff"
              android:gravity="center"

    />
</FrameLayout>